<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="windows_azure_distribution.key_value_store.entity_manager.class">Doctrine\KeyValueStore\EntityManager</parameter>
        <parameter key="windows_azure_distribution.key_value_store.annotation_driver.class">Doctrine\KeyValueStore\Mapping\AnnotationDriver</parameter>
        <parameter key="windows_azure_distribution.key_value_store.storage.class">Doctrine\KeyValueStore\Storage\AzureSdkTableStorage</parameter>
    </parameters>

    <services>
        <service id="windows_azure_distribution.key_value_store.entity_manager" class="%windows_azure_distribution.key_value_store.entity_manager.class%">
        </service>

        <service id="windows_azure_distribution.key_value_store.annotation_driver" class="%windows_azure_distribution.key_value_store.annotation_driver.class%">
            <argument type="service" id="annotation_reader" />
        </service>

        <service id="windows_azure_distribution.key_value_store.storage" class="%windows_azure_distribution.key_value_store.storage.class%">
            <argument type="service" id="windows_azure_distribution.key_value_store.storage_client" />
        </service>
    </services>
</container>
